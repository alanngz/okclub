<% if flash[:notice]  %>
  <span><%= flash[:notice] %></span>
 <% end %>

<h1>Lista de proveedores</h1>

  <thead>
<table>

    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th>Categoria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @proveedors.each do |proveedor| %>
      <tr>
        <td><%= proveedor.nombre %></td>
        <td><%= proveedor.email %></td>
        <td><%= proveedor.direccion %></td>
        <td><%= proveedor.telefono %></td>
        <td><%= proveedor.categorium.nombre %></td>
        <td><%= link_to 'Ver', proveedor %></td>
        <td><%= link_to 'Editar', edit_proveedor_path(proveedor) %></td>
        <td><%= button_to 'Borrar', proveedor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Proveedor', new_proveedor_path %>
