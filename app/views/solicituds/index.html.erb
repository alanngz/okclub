<h1>Lista solicitudes</h1>

<table>
  <thead>
    <tr>
      <th>Servicio</th>
      <th>Cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @solicituds.each do |solicitud| %>
      <tr>
        <td><%= solicitud.servicio.descripcion %></td>
        <td><%= solicitud.cliente.nombre %></td>
        <td><%= link_to 'Ver', solicitud %></td>
        <td><%= link_to 'Editar', edit_solicitud_path(solicitud) %></td>
        <td><%= button_to 'Borrar', solicitud, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Solicitud', new_solicitud_path %>
